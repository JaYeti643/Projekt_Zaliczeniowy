@model Contact

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Dodaj kontakt</h2>
<form method="post" asp-action="Create">
    
    <div class="mb-2">
        <label class="form-label" asp-for="Name">Imię:</label>
        <input class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="BirthDate">BirthDate</label>
        <input class="form-control" asp-for="BirthDate"/>
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="mb-2">
     <button class="btn btn-primary" type="submit">Zapisz</button>
     
    </div>
    
    

</form>